---
import ArrowUp from "~icons/mdi/arrow-up-circle-outline"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <slot />
    <a class="button-up" href="#lost-halls-map-reading-guide">
      <ArrowUp font-size={45} />
    </a>
  </body>
</html>

<style is:global lang="scss">
  @import url(https://fonts.googleapis.com/css?family=Hanken+Grotesk:regular,500,600);

  :root {
    --bg-primary: #0e1016;
    --bg-secondary: #12151c;
    --bg-primary-content: #acb2c9;
    color-scheme: dark;
  }

  * {
    box-sizing: border-box;
  }

  html,
  body {
    min-height: 100%;
    width: 100%;
    margin: 0;
    scroll-behavior: smooth;
  }

  body {
    font-family: "Hanken Grotesk", sans-serif;
    background-color: #0e1016;
    /* background-image: url(../assets/polygon-scatter-haikei.svg); */
    color: var(--bg-primary-content);
    display: flow-root;
    font-size: 1.25rem;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  img {
    width: min(100%, 30rem);
    height: auto;
    border-radius: 0.25em;
  }

  .button-up {
    margin: 0;
    padding: 0;
    position: fixed;
    bottom: 2.5em;
    right: 3em;
    z-index: 2;
    color: #98b2ff;
    background-color: var(--bg-secondary);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 12rem;
    transition: color 0.30s ease-in-out;
    &:visited {
      color: #98b2ff;
    }
    &:hover {
      background-color: var(--bg-secondary);
      color: #b7c9ff;
      transition: color 0.30s ease-in-out;
    }
    &[hidden] {
      display: none;
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    padding-top: 1em 0;
    color: #d0d4de;
    border-bottom: 1px solid #292e40;
  }

  h1:before {
    content: "";
    background-image: url(../assets/lost-halls-portal.png);
    background-size: 100% 100%;
    display: inline-block;

    /*size of your image*/
    height: 50px;
    width: 50px;

    /*if you want to change the position you can use margins or:*/
    position: relative;
    top: 0.5rem;
    right: 0.3rem;
  }

  h2:before,
  h3:before,
  h4:before,
  h5:before,
  h6:before {
    content: "";
    background-image: url(../assets/pot.png);
    background-size: 100% 100%;
    display: inline-block;

    /*size of your image*/
    height: 40px;
    width: 40px;

    /*if you want to change the position you can use margins or:*/
    position: relative;
    top: 0.5rem;
    right: 0.25rem;
  }

  h1 {
    padding-top: 0;
    line-height: 1.25;
    color: #eceef3;
    border-bottom: none;
    margin: 0;
    margin-bottom: 0.75em;
  }

  p {
    margin-top: 0.25em;
  }

  @media (max-width: 700px) {
    h1 {
      margin: 0;
    }

    h2,
    h3,
    h4,
    h5,
    h6 {
      padding-top: 2.5em;
    }

    .button-up {
      bottom: 1em;
      right: 1em;
    }
  }
</style>

<script>
  setInterval(() => {
    const button = document.querySelector(".button-up")!
    const currentScrollPosition = window.scrollY
    if (currentScrollPosition > 1500) {
      button.removeAttribute("hidden")
    } else {
      button.setAttribute("hidden", "")
    }
  }, 500)
</script>
